<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:background="@color/gray"
    >
        <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="30dp"
                app:layout_constraintVertical_bias="0.3"
        >
            <ImageView
                    android:id="@+id/playlist_iv"
                    android:src="@drawable/avatar"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="150dp"
                    android:layout_height="150dp"/>
            <TextView
                    android:id="@+id/playlist_title"
                    app:layout_constraintLeft_toRightOf="@id/playlist_iv"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我喜欢的音乐"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginLeft="20dp"/>
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toRightOf="@id/playlist_iv"
                    app:layout_constraintTop_toBottomOf="@id/playlist_title"
                    android:layout_margin="20dp">
                <ImageView
                        android:id="@+id/playlist_avatar"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/ic_launcher_background"
                />
                <TextView
                        android:id="@+id/playlist_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:textSize="17sp"
                        android:text="Septieme7"
                        app:layout_constraintLeft_toRightOf="@id/playlist_avatar"
                        app:layout_constraintTop_toBottomOf="@id/playlist_title"/>

            </LinearLayout>

        </android.support.constraint.ConstraintLayout>


    </android.support.constraint.ConstraintLayout>
</layout>
